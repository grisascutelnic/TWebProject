@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

<style>
    /* Stilizare pentru containerul formularului */
    .container {
        margin-top: 20px;
    }

    /* Stilizare pentru etichetele de control */
    .control-label {
        font-weight: bold;
    }

    /* Stilizare pentru input-uri și textarea */
    input[type="text"],
    textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    /* Stilizare pentru butonul de submit */
    input[type="submit"] {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        /* Stilizare pentru butonul de submit la hover */
        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    /* Stilizare pentru hr */
    hr {
        border-top: 1px solid #ccc;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    /* Stilizare pentru titlul formularului */
    h2 {
        color: #007bff;
        margin-bottom: 20px;
    }
</style>

<h2 class="text-center">Edit</h2>

<form method="post" action="/submit-form">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-horizontal">
                    <h4>Animal Edit</h4>
                    <hr />
                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">Name</label>
                        <div class="col-md-10">
                            <input class="form-control" id="Name" name="Name" type="text" value="Animal Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" for="Description">Description</label>
                        <div class="col-md-10">
                            <textarea class="form-control" id="Description" name="Description">Animal Description</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" for="ImageUrl">Image URL</label>
                        <div class="col-md-10">
                            <input class="form-control" id="ImageUrl" name="ImageUrl" type="text" value="Animal Image URL" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
