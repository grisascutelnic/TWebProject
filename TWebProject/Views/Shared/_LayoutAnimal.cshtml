@{
    ViewBag.Title = "Animal";
}

<!doctype html>
<html lang="">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Adoptex</title>
    <link rel="stylesheet" href="~/Style/styleIndex.css">
</head>

<body style="background-color: azure ">

    <div class="header">
        @Html.Partial("header")
    </div>

    @RenderBody()

    <div class="animal-profile">
        <div class="animal-image">
            <img src="pisi1.png" alt="Animal Image">
        </div>
        <div class="animal-info">
            <h1>Animal Name</h1>
            <p><strong>Species:</strong> Dog</p>
            <p><strong>Breed:</strong> Labrador Retriever</p>
            <p><strong>Age:</strong> 3 years</p>
            <p><strong>Gender:</strong> Male</p>
            <p><strong>Location:</strong> New York, NY</p>
            <p><strong>Description:</strong> This is a friendly and energetic Labrador Retriever looking for a loving home. He loves to play and is great with children.</p>
            <button class="adopt-button">Adopt Me</button>
        </div>
    </div>

</body>
</html>
